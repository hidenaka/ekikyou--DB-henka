{
  "version": "1.0",
  "description": "64卦384爻判定用の質問セット",

  "structure": {
    "lower_trigram": "内卦（自分の内側・本質）を決定する質問群",
    "upper_trigram": "外卦（外部環境・状況）を決定する質問群",
    "line_position": "爻位（段階）を決定する質問"
  },

  "trigram_mapping": {
    "乾": {"keywords": ["強い", "積極的", "創造", "リーダー"], "nature": "天・創造"},
    "兌": {"keywords": ["喜び", "交流", "言葉", "楽しい"], "nature": "沢・喜悦"},
    "離": {"keywords": ["明るい", "知性", "情熱", "表現"], "nature": "火・明晰"},
    "震": {"keywords": ["動く", "衝撃", "始まり", "活発"], "nature": "雷・震動"},
    "巽": {"keywords": ["柔軟", "浸透", "従う", "適応"], "nature": "風・浸透"},
    "坎": {"keywords": ["困難", "深い", "危険", "水"], "nature": "水・険難"},
    "艮": {"keywords": ["止まる", "静か", "山", "内省"], "nature": "山・静止"},
    "坤": {"keywords": ["受容", "柔順", "育む", "従う"], "nature": "地・受容"}
  },

  "questions": {
