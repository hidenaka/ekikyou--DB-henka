  "scoring": {
    "trigram_determination": {
      "method": "weighted_sum",
      "description": "各質問のweightsを合算し、最大値の八卦を選択"
    },
    "line_determination": {
      "method": "average",
      "description": "line質問の回答を平均し、最も近い爻位を選択"
    }
  }
}
