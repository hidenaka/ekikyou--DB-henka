          {"value": "4", "label": "中盤を過ぎた", "line": 4},
          {"value": "5", "label": "かなり進んでいる（終盤に近い）", "line": 5},
          {"value": "6", "label": "ほぼ完了、または終わりに近い", "line": 6}
        ]
      }
